<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/item_background"
    android:layout_marginBottom="4dp"
    android:gravity="center_vertical">

    <!-- Información de la promesa -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tituloText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título de la promesa"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/green_700" />

        <TextView
            android:id="@+id/montoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₡0.00"
            android:textSize="12sp"
            android:textColor="@color/blue_700" />

        <TextView
            android:id="@+id/fechaText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/10/2025"
            android:textSize="11sp"
            android:textColor="@color/gray_600" />

    </LinearLayout>

    <!-- Imagen pequeña (solo visible si existe) -->
    <ImageView
        android:id="@+id/imagePreview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/placeholder_background"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>

