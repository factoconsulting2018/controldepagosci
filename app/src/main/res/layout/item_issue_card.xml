<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con nombre del cliente -->
        <TextView
            android:id="@+id/clienteNombreText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Cliente"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <!-- Issues -->
        <LinearLayout
            android:id="@+id/issuesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">
            <!-- Se llenar치n din치micamente -->
        </LinearLayout>

        <!-- Total de issues -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_300"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/totalIssuesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total de Issues: 0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="end"
            android:layout_marginBottom="8dp" />

        <!-- Fecha de creaci칩n -->
        <TextView
            android:id="@+id/fechaCreacionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Creado: 01/10/2025"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp" />

        <!-- Botones de acci칩n -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnCompartir"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="游닋 Compartir"
                android:textSize="11sp"
                android:backgroundTint="@color/green_500"
                android:textColor="@color/white"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnVerDetalle"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Ver Detalle"
                android:textSize="11sp"
                android:backgroundTint="@color/blue_500"
                android:textColor="@color/white"
                android:layout_marginEnd="4dp" />

        </LinearLayout>

        <!-- Selector de Estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp" />

            <Spinner
                android:id="@+id/estadoSpinner"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@android:drawable/spinner_background"
                android:backgroundTint="@color/white"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <!-- Botones de administraci칩n -->
        <LinearLayout
            android:id="@+id/adminButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <Button
                android:id="@+id/btnEditarIssue"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Editar"
                android:textSize="11sp"
                android:backgroundTint="@color/orange_500"
                android:textColor="@color/white"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnEliminarIssue"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Eliminar"
                android:textSize="11sp"
                android:backgroundTint="@color/red_500"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

