<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="7dp"
    android:paddingTop="21dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestión de Clientes"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/green_700"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Barra de Progreso -->
    <LinearLayout
        android:id="@+id/progressBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:background="@drawable/form_background"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/progressText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Progreso: 0/0 (0%)"
            android:textSize="14sp"
            android:textColor="@color/dark_green"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Abecedario para filtrar clientes -->

    <!-- Filtro por Ejecutivo -->
    <HorizontalScrollView
        android:id="@+id/ejecutivoScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="none"
        android:background="@drawable/form_background"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/progressBarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/ejecutivoFilterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnAllEjecutivos"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="FILTROS"
                android:textSize="10sp"
                android:backgroundTint="@color/green_500"
                android:textColor="@color/white"
                android:layout_margin="1dp"
                android:minWidth="32dp"
                android:padding="4dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Fila de búsqueda y botón generar informe -->
    <LinearLayout
        android:id="@+id/searchAndReportLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="0dp"
        app:layout_constraintTop_toBottomOf="@id/ejecutivoScrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Buscador (encogido) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/searchLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:visibility="visible"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxStrokeColor="@color/green_500"
            app:hintTextColor="@color/green_700"
            app:startIconDrawable="@drawable/ic_search"
            app:startIconTint="@color/green_500">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/searchEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Buscar cliente..."
                android:textSize="12sp"
                android:textColor="@color/black"
                android:inputType="text"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botón Generar Informe -->
        <Button
            android:id="@+id/generateReportButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generar Informe"
            android:textSize="10sp"
            android:backgroundTint="@color/green_500"
            android:textColor="@color/white"
            android:padding="8dp"
            android:minWidth="100dp"
            android:maxLines="1" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/questionsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/searchAndReportLayout"
        app:layout_constraintBottom_toTopOf="@id/navigationBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Menú Flotante de Acciones - Material 3 Expressive -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMain"
        app:backgroundTint="?attr/colorPrimary"
        app:tint="?attr/colorOnPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        android:contentDescription="Menú Principal"
        app:layout_constraintBottom_toTopOf="@id/navigationBar"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Limpiar -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabLimpiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_clear_answers"
        android:contentDescription="Limpiar Selección"
        app:backgroundTint="@color/orange_500"
        app:tint="@android:color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/fabOrdenar"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Ordenar A-Z -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabOrdenar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_category"
        android:contentDescription="Ordenar Alfabéticamente"
        app:backgroundTint="@color/purple_500"
        app:tint="@android:color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/fabMain"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Agregar Cliente -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAgregarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        android:contentDescription="Agregar Cliente"
        app:backgroundTint="@color/blue_500"
        app:tint="@android:color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/fabLimpiar"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Ir al Inicio - Flecha hacia arriba -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabScrollToTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_arrow_up"
        android:contentDescription="Ir al primer cliente"
        app:backgroundTint="@color/teal_700"
        app:tint="?attr/colorOnPrimary"
        app:layout_constraintBottom_toTopOf="@id/fabMain"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Navigation Bar Compact - Material 3 with Zoom Animations -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_200"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/footer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/navigation_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconSize="24dp"
        app:itemTextAppearanceActive="@style/TextAppearance.Material3.LabelSmall"
        app:itemTextAppearanceInactive="@style/TextAppearance.Material3.LabelSmall"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:itemRippleColor="@color/green_500" />

    <!-- Footer -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:paddingBottom="0dp"
        android:background="@color/green_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/footerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desarrollada por Ing.Ronald Rojas C | 8878-1108 | Ver 1.0"
            android:textSize="10sp"
            android:textColor="@color/green_700"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
